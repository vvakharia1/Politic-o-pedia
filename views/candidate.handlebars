
<body class="main">
    <!-- Navigation Bar -->
    <header class="">
        <nav class="navbar navbar-expand-md h-font navbar-light ">
            <div class="navbar-brand title-font">
                <h1>Politic-O-Pedia</h1>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class=" navbar-nav ml-auto nav-font">
                    <li class="nav-item active ">
                        <a class="nav-link ks-nav " href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ks-nav" href="/candidates">View Candidates</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link ks-nav" href="#logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">
        <div class="row">
            <div class="col-md-12 border ks-container m-4">
                <section class="p-4">
                    <h1 class="h-font">{{Candidate.fullName}}</h1>
                    <section><img class="image pb-4 pr-4" src="/{{Candidate.image}}">
                        <table class="table table-candidates">
                            <tbody>
                                <tr>
                                    <th scope="row">Full Name:</th>
                                    <td id= "sourceName">{{Candidate.fullName}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Birthdate:</th>
                                    <td>{{Candidate.birthDate}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Birth Location:</th>
                                    <td>{{Candidate.birthLocation}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Current Location:</th>
                                    <td>{{Candidate.currentLocation}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Political Party:</th>
                                    <td>{{Candidate.politicalParty}}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Offical Website:</th>
                                    <td><a href={{Candidate.website}}>{{Candidate.website}}</a></td>
                                </tr>
                                <tr>
                                    <th scope="row">Current Held Office/Occupation:</th>
                                    <td>{{Candidate.occupation}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </section>
            </div>
        </div>
        <div class="col-md-5 ks-container mx-auto p-2 m-3">
            <h3 class="text-center py-2 mx-auto border-bottom h-font">Debate</h3>
            <div class="mx-auto">
                {{#each Comments}}
                <div class="p-4 ks-com-container mb-2">
                    <strong>
                        {{name}}
                    </strong> 
                    <button id="#delete-comment" data-id={{id}} type="button" class="ml-4 close delete-comment">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <span class="clear">wrote:</span>
                    <div class="clear">{{commentText}}</div>

                </div>
                {{/each}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 border ks-container m-4">
                <form class="p-4">
                    <div class="form-group">
                        <label for="comment-name">Name:</label>
                        <input class="form-control" id="comment-name" placeholder="Anonymous">
                    </div>
                    <div class="form-group">
                        <label for="comment-text">Comment:</label>
                        <textarea class="form-control" id="comment-text" rows="3"></textarea>
                        <button type="submit" class="mt-3 ks-button" id="comment-submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>
